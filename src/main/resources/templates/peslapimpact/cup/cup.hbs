<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Cup Page</title>

  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
  <link href="/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template -->
  <link href="./css/result/landing-page.min.css" rel="stylesheet">
  
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/cup.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/footer.css">

</head>

<body>
  <input type="hidden" id="menu_content" value="cup">
  <div id="header"></div>

  <!-- Image Showcases -->
  <section class="showcase">
    <div id="result_container" class="container-fluid p-0">
      {{#each cup_list}}
      <div class="row no-gutters">
        <div id="cup_img_{{@index}}" class="col-lg-6 order-lg-2 text-white showcase-img");">
          <img class="banner" src="/img/cup/{{img}}" alt="pes">
        </div>
        <div class="col-lg-6 order-lg-1 my-auto showcase-text center-block">
          <p class="match"><a href="/cup/{{id}}">#{{name}}</a> 인원: {{participants}}, 등급: {{grade}}, 대회 기간 {{date_from}} ~ {{date_to}}</p>
          <a href="/cup/{{id}}">#이 대회의 상세 보기 <span class="badge"> {{comment_count}}개의 응원메시지가 있습니다.</span></a>
        </div>
      </div>
      <hr>
      {{/each}}
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Show Next Cups Info</a>
      </div>
    </div>
  </section>
  <div id="footer"></div>
  
  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!--add custom js -->
  <script src="/js/app/common.js"></script>
  <script src="/js/app/cup.js"></script>

</body>

</html>
